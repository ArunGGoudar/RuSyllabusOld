<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#87CEFA"
        android:gravity="center"
        android:padding="20dp"
        android:text="CS and IT"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/first_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="I Semester" />

            <Button
                android:id="@+id/second_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="II Semester" />

            <Button
                android:id="@+id/third_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="III Semester" />

            <Button
                android:id="@+id/fourth_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="IV Semester" />

            <Button
                android:id="@+id/fifth_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="V Semester" />
            <Button
                android:id="@+id/sixth_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="VI Semester" />
            <Button
                android:id="@+id/seventh_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="VII Semester" />
            <Button
                android:id="@+id/eighth_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="VIII Semester" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>